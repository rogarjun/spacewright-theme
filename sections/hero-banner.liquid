{%- liquid
  assign heading_font = section.settings.heading_font
  assign subheading_font = section.settings.subheading_font
-%}

<style>
  {%- if heading_font != blank -%}
    {{ heading_font | font_face }}
  {%- endif -%}

  {%- if subheading_font != blank -%}
    {{ subheading_font | font_face }}
  {%- endif -%}

  .hero-banner {
    position: relative;
    display: grid;
    place-items: center;
    width: 100%;
    overflow: hidden;
  }

  .hero-banner__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-banner__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
  }

  .hero-banner__content {
    position: relative;
    z-index: 4;
    text-align: center;
    padding: 20px;
    color: white;
  }

  .hero-banner__heading {
    font-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};
    font-weight: {{ heading_font.weight }};
    font-style: {{ heading_font.style }};
    margin: 0 0 15px;
  }

  .hero-banner__subheading {
    font-family: {{ subheading_font.family }}, {{ subheading_font.fallback_families }};
    font-weight: {{ subheading_font.weight }};
    font-style: {{ subheading_font.style }};
    margin: 0 0 20px;
  }

  .hero-banner__button {
    display: inline-block;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 5px;
    transition: opacity 0.3s ease;
  }

  .hero-banner__button:hover {
    opacity: 0.85;
  }
</style>

{% style %}
  /* Scope dynamic styles to this section instance for higher specificity */
  #shopify-section-{{ section.id }} .hero-banner {
    height: {{ section.settings.section_height_mobile }}vh;
    position: relative;
  }

  #shopify-section-{{ section.id }} .hero-banner__heading {
    font-size: {{ section.settings.heading_size_mobile }}px;
    color: {{ section.settings.heading_color }};
  }

  #shopify-section-{{ section.id }} .hero-banner__subheading {
    font-size: {{ section.settings.subheading_size_mobile }}px;
    color: {{ section.settings.subheading_color }};
  }

  #shopify-section-{{ section.id }} .hero-banner__button {
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
  }

  /* Apply overlay color + alpha in a single property to avoid affecting children */
  #shopify-section-{{ section.id }} .hero-banner__overlay {
    background-color: {{ section.settings.overlay_color | color_modify: 'alpha', section.settings.overlay_opacity }};
  }



  @media (min-width: 750px) {
    #shopify-section-{{ section.id }} .hero-banner {
      height: {{ section.settings.section_height_desktop }}vh;
    }
    #shopify-section-{{ section.id }} .hero-banner__heading {
      font-size: {{ section.settings.heading_size_desktop }}px;
    }
    #shopify-section-{{ section.id }} .hero-banner__subheading {
      font-size: {{ section.settings.subheading_size_desktop }}px;
    }
  }
{% endstyle %}

<div class="hero-banner">
  {%- if section.settings.image != blank -%}
    <div class="hero-banner__background">
      {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy' }}
    </div>
  {%- endif -%}
  <div
    class="hero-banner__overlay"
    style="position: absolute; inset: 0; left: 0; top: 0; width: 100%; height: 100%; display: block; z-index: 3; background-color: {{ section.settings.overlay_color | color_modify: 'alpha', section.settings.overlay_opacity }}; pointer-events: none;"
  ></div>
  <div class="hero-banner__content">
    {%- if section.settings.heading != blank -%}
      <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <div class="hero-banner__subheading">{{ section.settings.subheading }}</div>
    {%- endif -%}
    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link | default: '#' }}" class="hero-banner__button">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
