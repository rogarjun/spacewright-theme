    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.settings.header_styling.content"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "t:sections.hero_banner.settings.overlay_opacity.label",
      "default": 0.3
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "t:sections.hero_banner.settings.overlay_color.label",
