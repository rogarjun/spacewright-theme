    {
      "type": "color",
      "id": "subheading_color",
      "label": "t:sections.hero_banner.settings.subheading_color.label",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.settings.header_button.content"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "t:sections.hero_banner.settings.button_label.label",
      "default": "Discover Your Tools"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.hero_banner.settings.button_link.label"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "t:sections.hero_banner.settings.button_background.label",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "t:sections.hero_banner.settings.button_text_color.label",
